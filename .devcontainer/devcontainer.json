{
  "name": "devcontainer",
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "features": {
    "ghcr.io/mrsimonemms/devcontainers/cobra-cli:1": {},
    "ghcr.io/guiyomh/features/goreleaser:0": {},
    "ghcr.io/devcontainers-extra/features/temporal-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "svelte.svelte-vscode"
      ],
      "settings": {}
    }
  },
  "postCreateCommand": {
    "bootstrap": "ln -s $PWD/.cobra.yaml $HOME/.cobra.yaml && if [ ! -f \"go.mod\" ]; then go mod init \"github.com/mrsimonemms/temporal-dsl\"; fi && if [ ! -f \"main.go\" ]; then cobra-cli init && go mod tidy; fi",
    "install-air": "go install github.com/air-verse/air@latest"
  },
  "containerEnv": {
    "CONVERTER_KEY_PATH": "/workspaces/temporal-dsl/keys.example.yaml",
    "GIT_REPO": "github.com/mrsimonemms/temporal-dsl",
    "LOG_LEVEL": "trace",
    "TEMPORAL_ADDRESS": "localhost:7233",
    "TDSL_EXAMPLE_ENVVAR": "some-example-envvar",
    "WORKFLOW_FILE": "./workflow.example.yaml"
  },
  "forwardPorts": [
    5173,
    7070,
    7233,
    8080,
    8233
  ]
}
