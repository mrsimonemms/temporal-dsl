{
  "name": "devcontainer",
  "image": "ghcr.io/mrsimonemms/devcontainers/full",
  "features": {
    "ghcr.io/mrsimonemms/devcontainers/cobra-cli:1": {},
    "ghcr.io/guiyomh/features/goreleaser:0": {},
    "ghcr.io/devcontainers-extra/features/temporal-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [],
      "settings": {}
    }
  },
  "postCreateCommand": {
    "bootstrap": "ln -s $PWD/.cobra.yaml $HOME/.cobra.yaml && if [ ! -f \"go.mod\" ]; then go mod init \"github.com/mrsimonemms/temporal-serverless-workflow\"; fi && if [ ! -f \"main.go\" ]; then cobra-cli init && go mod tidy; fi",
    "install-air": "go install github.com/air-verse/air@latest"
  },
  "containerEnv": {
    "GIT_REPO": "github.com/mrsimonemms/temporal-serverless-workflow",
    "TEMPORAL_ADDRESS": "localhost:7233",
    "WORKFLOW_FILE": "./workflow.example.yaml"
  },
  "forwardPorts": [
    7233,
    8233
  ]
}
